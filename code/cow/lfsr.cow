lfsr{
    preamble{
        >
        EXIT_STACK
        rebase{ -1 }
        lfsr_advance_layout
        set{
            seed    183
            tap     250
            data    69
        }
        goto{ start }
        call{ begin }
    }
    depends{
        bvm
        common
        bitwise
    }
    namespace{
        begin{
            call{ run }
        }
        run{
            call{ encrypt }
            call{ advance }
        }
        run_in_place{
            call{ clean in_place }
            call{ run }
        }
        encrypt{
            scope{
                lfsr_advance_layout
                set{
                    start   tap
                    tap     seed
                    seed    0
                }
            }
            lfsr_encrypt_layout
            goto{ end }
            swap( seed data )
            call{ clean encrypt }
            call{ bitwise xor }
        }
        advance{
            lfsr_advance_layout
            op_layout
            set{
                op1     tap
                op2     seed
            }
            call{ clean advance }
            call{ bitwise u_xor }
            call{ bitwise and   }
        }
        namespace clean{
            advance{
                lfsr_advance_layout
                swap( bitxor seed )
                goto{ bitxor }
                [->++<]         # double the seed into the uxor result
                goto{ start }
            }
            encrypt{ # reorganize to lfsr advance layout
                scope{
                    lfsr_encrypt_clean_layout
                    set{
                        seed        tap
                        data        seed
                        tap         data
                    }
                }
            }
            in_place{ # reorganize encryption result to advancing format

            }
        }
        panic{
            BREAK
        }
    }
    bindings{
        lfsr_advance_layout{
            layout{
                calling -1
                start   0
                bitxor  0
                seed    1
                tap     2
                data    3
            }
        }
        lfsr_encrypt_layout{
            layout{
                start   0
                calling 1
                end     2
                seed    2
                data    3
            }
        }
        lfsr_encrypt_clean_layout{
            layout{
                tap    -2
                start   0
                data    0
                seed    1
            }
        }
        lfsr_encrypt_return_layout{
            layout{
                seed    0
                data   -2
                tap     1
            }
        }
    }
    postamble{

    }
}